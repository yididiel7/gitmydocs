# Aliases
alias cat='bat'
alias cl='clear'
alias re='reset'
alias vim='nvim'
alias ip='ip --color=auto'
alias wtr='curl wttr.in/Dimona,'
alias nd='ncdu --color dark'
alias yt-dlp='yt-dlp -f bv+ba/b'
#alias history='fc -lE 1 | lolcat'
alias bpyt='bpytop'
alias thesaurus='dict -d moby-thesaurus'
alias firefox='/opt/firefox/firefox'
alias info='pinfo'
alias sptcli='speedtest-cli --bytes --share'
alias rec='asciinema rec'
alias play='asciinema play'
alias btop='btop --utf-force'

# fix obvious typo's
alias cd..='cd ..'
alias ncmpcpp='sudo ncmpcpp'
# readable output
alias pdw='pwd'

# open ~/.zshrc in using the default editor specified in $EDITOR
alias ec="$EDITOR $HOME/.zshrc"

# source ~/.zshrc
alias sc="source $HOME/.zshrc"
alias szp="source $HOME/.zshrc-personal"
## Colorize the grep command output for ease of use (good for log files)##
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
# Fortune and Cowsay with lolcat colors
alias fcl='fortune | cowsay | lolcat'

# Lolcat Alias
alias lolls='ls -l | lolcat'
alias ft='fortune | lolcat'

# Exa Aliases general use
alias ls='exa'                                                          # ls
alias l='exa -lbF --git'                                                # list, size, type, git
alias ll='exa -lbGF --git'                                              # long list
alias llm='exa -lbGd --git --sort=modified'                             # long list, modified date sort
alias la='exa -lbhHigUmuSa --time-style=long-iso --git --color-scale'   # all list
alias lx='exa -lbhHigUmuSa@ --time-style=long-iso --git --color-scale'  # all + extended list

# specialty views
alias lS='exa -1'                                                       # one column, just names
alias lt='exa --tree --level=2'                                         # tree

# Logo-ls Aliases
alias ilag='logo-ls -AD'
alias ila='logo-ls -A'
alias illg='logo-ls -alD'
alias ill='logo-ls -al'
alias ilsg='logo-ls -D'
alias ils='logo-ls'

# Alias for lsd command Folders frist then Files.
alias ldc='lsd --group-directories-first'
# hardware info --short
alias hw='hwinfo --short'

# History command Aliases
alias h='history'
alias hl='history | bat'

# LSD Aliases
 # alias ls='lsd'
 alias l='ls -l'
 alias la='ls -a'
 alias lla='ls -la'
 alias lt='ls --tree'

# Aliases for software managment
# pacman or pm
alias pacman='sudo pacman --color auto'
alias update='sudo pacman -Syyu'
alias upd='sudo pacman -Syu'

 # pacman COMMANDS
 alias sps='sudo pacman -S'
 alias spr='sudo pacman -R'
 alias sprs='sudo pacman -Rs'
 alias sprdd='sudo pacman -Rdd'
 alias spqo='sudo pacman -Qo'
 alias spsii='sudo pacman -Sii'

# get fastest mirrors in your neighborhood
alias mirror="sudo reflector -f 30 -l 30 --number 10 --verbose --save /etc/pacman.d/mirrorlist"
alias mirrord="sudo reflector --latest 30 --number 10 --sort delay --save /etc/pacman.d/mirrorlist"
alias mirrors="sudo reflector --latest 30 --number 10 --sort score --save /etc/pacman.d/mirrorlist"
alias mirrora="sudo reflector --latest 30 --number 10 --sort age --save /etc/pacman.d/mirrorlist"

# Cleanup orphaned packages
alias cleanup='sudo pacman -Rns $(pacman -Qtdq)'
# This will generate a list of explicitly installed packages
alias list="sudo pacman -Qqe"
#This will generate a list of explicitly installed packages without dependencies
alias listt="sudo pacman -Qqet"
# list of AUR packages
alias listaur="sudo pacman -Qqem"
# add > list at the end to write to a file
# install packages from list
# pacman -S --needed - < my-list-of-packages.txt 
# clear
alias clean="clear; seq 1 $(tput cols) | sort -R | sparklines | lolcat"
# search content with ripgrep
alias rg="rg --sort path"
# get the error messages from journalctl
alias jctl="journalctl -p 3 -xb"

# paru as aur helper - updates everything
alias upqll='paru -Syu --noconfirm'
#skip integrity check
alias paruskip='paru -S --mflags --skipinteg'
alias yayskip='yay -S --mflags --skipinteg'
#alias trizenskip='trizen -S --skipinteg'

#check cpu
alias cpu="cpuid -i | grep uarch | head -n 1"
#search content with ripgrep
alias rg="rg --sort path"
# Directory and file sorting
alias lt="ll --sort=modified -r | lolcat"  # Lists sorted by date, most recent last.
# confirmation
alias mv='mv -i'
alias cp='cp -i'
alias ln='ln -i'
# Find location
alias whereami='echo $PWD'
# SortClipBoard
alias sortclipboard='xclip -selection c -o | sort | xclip -selection c -i'
